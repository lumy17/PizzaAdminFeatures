@page
@model PizzaApp.Pages.Pizzas.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Pizza Menu</h1>

<p class="text-right">
    <a asp-page="Create" class="btn btn-primary">Create New Pizza</a>
</p>

<div class="row">
    @foreach (var item in Model.Pizza)
    {
        <div class="col-md-4">
            <div class="card">
                <img class="card-img-top pizza-image" src="@item.ImageUrl" alt="Pizza Image"> <!-- Add a class to the img tag -->
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.PizzaName)</h5>
                    <p class="card-text">Base Price: @Html.DisplayFor(modelItem => item.BasePrice)</p>
                    <h6>Ingredients:</h6>
                    <ul>
                        @foreach (var ingredient in item.PizzaIngredients)
                        {
                            <li>@ingredient.Ingredient.Name;</li>
                        }
                    </ul>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Add this style block -->
<style>
    .pizza-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
</style>
