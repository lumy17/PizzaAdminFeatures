@page
@model PizzaApp.Pages.Pizzas.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>Pizza</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.PizzaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.PizzaName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.BasePrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.BasePrice)
        </dd>
        <dt class="col-sm-2">Ingredients</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var ingredient in Model.Pizza.PizzaIngredients)
                {
                    <li>@ingredient.Ingredient.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Pizza.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
