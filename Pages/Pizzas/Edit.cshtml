@page
@model PizzaApp.Pages.Pizzas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pizza.Id" />
            <div class="form-group">
                <label asp-for="Pizza.PizzaName" class="control-label"></label>
                <input asp-for="Pizza.PizzaName" class="form-control" />
                <span asp-validation-for="Pizza.PizzaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.BasePrice" class="control-label"></label>
                <input asp-for="Pizza.BasePrice" class="form-control" />
                <span asp-validation-for="Pizza.BasePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedIngredients" class="control-label"></label>
                <select multiple asp-for="SelectedIngredients" asp-items='@(ViewData["Ingredients"] as SelectList)' class="form-control"></select>
                <span asp-validation-for="SelectedIngredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
